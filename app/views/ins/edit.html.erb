<center>
<h1>edit an in</h1>
 
<%= link_to 'in', in_path %> / 
<%= link_to 'index', items_path %> / 
<%= link_to 'out', outs_path %><br>

<%= form_for :in, url: in_path(@in), method: :patch do |f| %>
  <% if @in.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@in.errors.count, "error") %> prohibited
        this item from being saved:
      </h2>
      <ul>
        <% @in.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<table width=60%>
  <tr>
    <th>date</th>
    <th>item</th>
    <th>amount</th>
    <th>price</th>
    <th>from</th>
    <th>paid</th>
    <th colspan="3"></th>
  </tr>
  <tr>
    <td><%= f.date_select :date %></td>
    <td><%= f.select :item_id, Item.all.order('name ASC').map { |i| [i.name, i.id]}, :hide_label => true%></td>
    <td><%= f.text_field :amount %></td>
    <td><%= f.text_field :price %></td>
    <td><%= f.text_field :from %></td>
    <td><%= f.check_box :paid %></td>
  </tr>
  <tr>
    <td colspan="5"><center><%= f.submit %></td>
  </tr>
</table>
<% end %>
</center>
